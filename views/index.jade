extends layout

block content
  if crumbs
    .ui.breadcrumb
      each crumb in crumbs
        span.divider /
        a.section(class=crumb.active ? 'active' : '' href=crumb.path)
          span= crumb.name

  if dirs.length
    .ui.list
      each dir in dirs
        a.item(href='#{dir.name}')
          i.folder.icon
          .content= dir.name

  unless dirs.length
    h3 No images
  else
    .ui.four.column.grid
      each file in files
        .column
          a.ui.fluid.card(href='/img/#{file.name}')
            .image
              img(src='/preview/#{file.name}')
            .content
              span= file.name
