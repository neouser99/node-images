extends layout

block content
  if crumbs
    .ui.breadcrumb
      each crumb in crumbs
        span.divider /
        a.section(class=crumb.active ? 'active' : '' href=crumb.path)
          span= crumb.name

  if dirs.length
    h2 dirs
    ul
      each dir in dirs
        li
          a(href='#{dir.name}')= dir.name
  h2 pics
  unless dirs.length
    span No images
  ul
  .ui.four.column.grid
    each file in files
      .column
        a.ui.fluid.card(href='/img/#{file.name}')
          .image
            img(src='/preview/#{file.name}')
          .content
            span= file.name
